<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#07689F"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="325dp"
        android:layout_height="300dp"
        android:gravity="center|bottom"
        android:src="@drawable/mainpic" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/OurFuckingMessage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:text="Ласкаво просимо в ВізаБот!"
            android:textColor="#FAFAFA"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/opis"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.00"
            android:gravity="center"
            android:layout_gravity="center|top"
            android:text="Найлегший спосіб зібрати документи для візи"

            android:textColor="#FAFAFA"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|center_horizontal"
            android:layout_weight="2">

            <Button
                android:id="@+id/button"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:background="#FF7E67"
                android:text="ПОЧАТИ РОБОТУ"
                android:textColor="#FAFAFA">


            </Button>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>