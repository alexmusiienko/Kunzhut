<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/arrow_bg2" />

    <RelativeLayout


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner1"
        android:layout_below="@+id/imageView1"
        android:layout_alignStart="@+id/imageView1">
        <TextView
            android:layout_width="match_parent"
            android:text="Питання"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView" />

        <Button
            android:id="@+id/chat_select_button1"
            android:layout_width="100dp"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#FF7E67"
            android:text="Так"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/chat_select_button2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#FF7E67"
            android:text="Ні"
            android:textColor="@android:color/white"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_alignBaseline="@+id/chat_select_button1"
            android:layout_alignBottom="@+id/chat_select_button1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="48dp" />

    </RelativeLayout>



</RelativeLayout>